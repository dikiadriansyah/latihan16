<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Kontak</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Kontak</a>

<% if (msg.length !== 0 ) { %>
  <div class="alert alert-success" role="alert">
<%= msg  %>
  </div>
<% } %>

            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Hp</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
<% if (contacts.length === 0) { %>
<tr>
  <td colspan="4">
    <div class="alert alert-danger" role="alert">
      Data Kontak Tidak ada.
      </div>
  </td>
</tr>
<% } %>
                <% contacts.forEach((contact,i) => { i++ %>
                  <tr>
                    <th scope="row"><%= i++  %></th>
                    <td><%= contact.nama  %></td>
                    <td><%= contact.noHp  %></td>
                    <td>
                        <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill "> <i class="bi bi-info-circle"> Detail</i> </a>
                    </td>
                  </tr>
                <% }) %>

               
                  
                </tbody>
              </table>
        </div>
    </div>
</div>