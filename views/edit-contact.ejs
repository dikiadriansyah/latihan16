<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form ubah data kontak</h2>

<% if (typeof error != 'undefined') { %>
    <div class="alert alert-danger" role="alert">
<ul>
<% error.forEach(eror => { %>
    <li><%= eror.msg  %></li>
<% }) %>
</ul>
    </div>
<% } %>

            <form method="post" action="/contact?_method=PUT">

              <input type="hidden" name="_id" id="" value="<%= contact._id %>"/>
                <input type="hidden" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama  %>" name="oldNama">

                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
                </div>
               
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                  </div>

                  <div class="mb-3">
                    <label for="nohp" class="form-label">No Hp</label>
                    <input type="text" class="form-control" id="noHp" name="noHp" value="<%= contact.noHp %>" required>
                  </div>

                <button type="submit" class="btn btn-primary">Ubah Data</button>
              </form>
        </div>
    </div>
</div>